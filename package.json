{
  "name": "strikegirl-extension",
  "displayName": "Strike Girl AI",
  "description": "VS Code extension for Strike Code Reviewer",
  "publisher": "UmaSahni",
  "version": "0.0.1",
  "icon": "logo.jpg",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "strikegirl.reviewCode",
        "title": "Review and Fix Code",
        "category": "Strike Girl AI"
      },
      {
        "command": "strikegirl.openChatbot",
        "title": "Open Chatbot",
        "category": "Strike Girl AI",
        "icon": "$(comment-discussion)"
      }
    ],
    "configuration": {
      "title": "Strike Girl AI",
      "properties": {
        "strikegirl.apiKey": {
          "type": "string",
          "default": "",
          "description": "Google GenAI API Key (or set GOOGLE_GENAI_API_KEY environment variable)",
          "scope": "application"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "dependencies": {
    "@google/genai": "^1.34.0",
    "@vscode/vsce": "^3.7.1",
    "dotenv": "^17.2.3"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@typescript-eslint/eslint-plugin": "^5.45.0",
    "@typescript-eslint/parser": "^5.45.0",
    "eslint": "^8.28.0",
    "typescript": "^4.9.4"
  }
}
